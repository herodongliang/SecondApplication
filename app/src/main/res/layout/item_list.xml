<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_first_feedback"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:scaleType="centerCrop"
            android:id="@+id/avatar_image"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:textColor="@color/specialword"
                    android:textSize="17dp"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="Alan"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#888888"
                    android:id="@+id/first_tv_department"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLength="20"
                    android:textSize="14dp"
                    android:text="ITS/CD"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:textColor="#888888"
                android:layout_marginBottom="15dp"
                android:id="@+id/desc"
                android:text="hhhhhhhhhhhhhhhhh"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginRight="20dp"
            android:textColor="#c2c6cd"
            android:id="@+id/date"
            android:textSize="14dp"
            android:text="2016-12-12"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backyinying"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:maxLines="5"
            android:ellipsize="end"
            android:id="@+id/tv_contentdescription"
            android:text="there is a will,there is a waythere is a will,there is a waythere is a will,there is a way"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textSize="17dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_moment_gone"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/tag"
                    android:scaleType="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="Rating"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/namesize"
                    android:layout_gravity="center_vertical"
                    />
                <com.hedgehog.ratingbar.RatingBar
                    android:id="@+id/ratingBar_moment_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    hedgehog:starCount="5"
                    android:clickable="false"
                    hedgehog:starEmpty="@mipmap/unlikestar"
                    hedgehog:starFill="@mipmap/likestar"
                    hedgehog:starImageHeight="15dp"
                    hedgehog:starImageWidth="25dp"
                    hedgehog:starImagePadding="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:id="@+id/tv_moment_comment"
                android:text="1111"
                android:textSize="@dimen/namesize"
                android:textColor="@color/contentword"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:focusable="false"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/lv_ratingmoments"/>
            <com.example.administrator.secondapplication.mlayout.NormalGridLayout
                android:id="@+id/autoGridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>
    </LinearLayout>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="55dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/eye"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="521"
                android:textSize="14dp"
                android:id="@+id/first_readnum"
                android:layout_marginLeft="5dp"
                android:textColor="#888888"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/messages"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="521"
                android:textSize="14dp"
                android:id="@+id/first_commentsnum"
                android:layout_marginLeft="5dp"
                android:textColor="#888888"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/icon_like"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="33"
                android:textSize="14dp"
                android:layout_marginLeft="5dp"
                android:textColor="#888888"
                android:gravity="center_vertical"/>
    </LinearLayout>


</LinearLayout>