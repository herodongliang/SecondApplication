<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.administrator.secondapplication.AddBasicActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/topcolor"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:id="@+id/iv_back_basic"
            android:src="@mipmap/shape_10"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add Basic info"
            android:textColor="#fff"
            android:textSize="22dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#fff"
        android:id="@+id/ll_profile_photo"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Profile Photo"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="18dp"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:src="@mipmap/arrowright"
            android:textColor="#000"
            android:layout_marginRight="10dp"
            android:text=">"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#C0C0C0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="#f00"
            android:text="*"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Country"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="16dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:textSize="16dp"
            android:gravity="center_vertical|right"
            android:layout_gravity="center"
            android:id="@+id/et_basic_country"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:background="@null"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#C0C0C0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="#f00"
            android:text="*"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="First Name"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="16dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical|right"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:id="@+id/et_basic_firstname"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:background="@null"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#C0C0C0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="#f00"
            android:text="*"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Last Name"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="16dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:gravity="center_vertical|right"
            android:id="@+id/et_basic_lastname"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:background="@null"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#C0C0C0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="#f00"
            android:text="*"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Department"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="16dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:singleLine="true"
            android:layout_marginRight="20dp"
            android:id="@+id/et_basic_department"
            android:textColor="#000"
            android:gravity="center_vertical|right"
            android:layout_marginLeft="10dp"
            android:background="@null"/>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAllCaps="false"
        android:text="Submit"
        android:id="@+id/but_basic_next"
        android:textColor="#fff"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/buttonback"/>
</LinearLayout>
