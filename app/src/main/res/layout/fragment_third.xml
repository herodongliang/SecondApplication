<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.secondapplication.thirdfragment.ThirdFragment">

    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_third"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_nomessage"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:src="@mipmap/messageemptyicon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No Message"
            android:textSize="17dp"
            android:textColor="@color/tishiword"
            android:visibility="visible"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_nomessage"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#fff"
        android:visibility="visible"
        android:id="@+id/ll_thirt_rotate"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_third_rotate"
            android:src="@mipmap/benz48"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:textColor="#C0C0C0"
            android:gravity="center_vertical"
            android:text="Loading..."/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#fff"
        android:visibility="invisible"
        android:id="@+id/ll_third_error"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_third_error"
            android:src="@mipmap/network_error"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/tishiword"
            android:id="@+id/but_third_reload"
            android:textAllCaps="false"
            android:src="@mipmap/reloading_unselected"
            android:background="@drawable/solid_divider_fff"
            android:gravity="center"
            />
    </LinearLayout>
</FrameLayout>
